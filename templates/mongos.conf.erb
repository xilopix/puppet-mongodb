# mongos.conf

pidfilepath=<%= scope.lookupvar('mongodb::pidfilepath') %>/mongos_<%= @server %>/mongos.pid
logpath=<%= scope.lookupvar('mongodb::logdir') %>/mongos_<%= @server %>.log
logappend=<%= @logappend %>

fork = <%= @fork %>
<%- if @bind_ip != "" -%>
bind_ip=<%= @bind_ip %>
<%- end -%>
port = <%= @port %>
configdb = <%= @config_servers_str %>
<%- @add_options.each do |addoption| -%>
<%= addoption %>
<%- end -%>
<%- if @useauth != false -%>
keyFile = /etc/mongos_<%= @server %>.key
<%- end -%>
