# mongod.conf

dbpath=<%= scope.lookupvar('mongodb::dbdir') %>/mongod_<%= @server %>
pidfilepath=<%= scope.lookupvar('mongodb::pidfilepath') %>/mongod_<%= @server %>/mongod.pid
logpath=<%= scope.lookupvar('mongodb::logdir') %>/mongod_<%= @server %>.log
logappend=<%= @logappend %>

rest=<%= @rest %>
fork=<%= @fork %>
<%- if @shardsvr != false -%>
shardsvr=<%= @shardsvr %>
<%- end -%>
<%- if @configsvr != false -%>
configsvr=<%= @configsvr %>
<%- end -%>
<%- if @bind_ip != "" -%>
bind_ip=<%= @bind_ip %>
<%- end -%>
port=<%= @port %>
<%- if @replSet != "" -%>
replSet=<%= @replSet %>
<%- end -%>
<%- if @auth != false -%>
auth=<%= @auth %>
<%- end -%>
<%- if @useauth != false -%>
keyFile = /etc/mongod_<%= @server %>.key
<%- end -%>
<%- if @engine != "" -%>
engine=<%= @engine %>
<%- end -%>
<%- @add_options.each do |addoption| -%>
<%= addoption %>
<%- end -%>
