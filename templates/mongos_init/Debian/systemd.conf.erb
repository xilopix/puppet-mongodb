[Unit]
Description=Mongos_<%= @instance %> server
SourcePath=/etc/init.d/mongos_<%= @instance %>
After=network.target

[Service]
Type=forking
PIDFile=<%= scope.lookupvar('mongodb::pidfilepath') %>/mongos_<%= @instance %>/mongos.pid
ExecStart=/etc/init.d/mongos_<%= @instance %> start --nofork
ExecReload=/etc/init.d/mongos_<%= @instance %> reload
ExecStop=/etc/init.d/mongos_<%= @instance %> stop
Restart=on-failure

[Install]
WantedBy=multi-user.target
